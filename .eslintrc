{
  "parser": "babel-eslint",
  "ecmaFeatures": {
    "jsx": true,
    "modules": true
  },
  "env": {
    "browser": true,
    "es6": true
  },
  "rules": {
    "brace-style": [2, "stroustrup", {"allowSingleLine": true}],
    "comma-dangle": 0,
    "no-cond-assign": [2, "always"],
    "no-console": 2,
    "no-constant-condition": 2,
    "no-debugger": 2,
    "no-dupe-args": 2,
    "no-dupe-keys": 2,
    "no-duplicate-case": 2,
    "no-empty": 2,
    "no-empty-class": 0,
    "no-extra-boolean-cast": 2,
    "no-extra-semi": 2,

    "no-shadow": 0,
    "no-shadow-restricted-names": 2,

    "camelcase": 1,
    "eqeqeq": [2, "smart"],
    "indent": [2, 2],
    "no-shadow-restricted-names": 2,
    "no-undefined": 2,
    "no-underscore-dangle": 0,
    "quotes": [1, "single"],
    "semi": [2, "always"]//,

//    "space-in-brackets": [2, "never"],
//    "space-in-parens": [2, "never"]
  }
}
