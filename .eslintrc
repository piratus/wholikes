{
  "parser": "babel-eslint",
  "plugins": ["react"],
  "ecmaFeatures": {
    "jsx": true,
    "modules": true
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "globals": {
    "__DEBUG__": true
  },
  "rules": {
    "brace-style": [2, "stroustrup", {"allowSingleLine": true}],
    "camelcase": 2,
    "comma-dangle": 0,
    "eqeqeq": [2, "smart"],
    "indent": [2, 2],
    "no-cond-assign": [2, "always"],
    "no-console": 2,
    "no-constant-condition": 2,
    "no-debugger": 2,
    "no-dupe-args": 2,
    "no-dupe-keys": 2,
    "no-duplicate-case": 2,
    "no-empty": 2,
    "no-extra-boolean-cast": 2,
    "no-extra-semi": 2,
    "no-shadow": 0,
    "no-shadow-restricted-names": 2,
    "no-undefined": 2,
    "no-underscore-dangle": 0,
    "no-var": 2,
    "quotes": [2, "single"],
    "semi": [2, "always"],

    "valid-jsdoc": 2,
    "valid-typeof": 2,

    "react/display-name": 0,
    "react/jsx-boolean-value": 2,
    "react/jsx-no-undef": 2,
    "react/jsx-quotes": 2,
    "react/jsx-sort-prop-types": 0,
    "react/jsx-sort-props": 0,
    "react/jsx-uses-react": 2,
    "react/jsx-uses-vars": 2,
    "react/no-did-mount-set-state": 2,
    "react/no-did-update-set-state": 2,
    "react/no-multi-comp": 2,
    "react/no-unknown-property": 2,
    "react/prop-types": 2,
    "react/react-in-jsx-scope": 2,
    "react/self-closing-comp": 2,
    "react/wrap-multilines": 2,
    "react/sort-comp": [2, {
      "order": [
        "lifecycle",
        "everything-else",
        "handlers",
        "renderers"
      ],
      "groups": {
        "lifecycle": [
          "displayName",
          "propTypes",
          "defaultProps",
          "contextTypes",
          "childContextTypes",
          "constructor",
          "getChildContext",
          "componentWillMount",
          "componentDidMount",
          "componentWillReceiveProps",
          "shouldComponentUpdate",
          "componentWillUpdate",
          "componentDidUpdate",
          "componentWillUnmount"
        ],
        "handlers": [
          "/^handle.+$/"
        ],
        "renderers": [
          "/^render.+$/",
          "render"
        ]
      }
    }]
  }
}
